<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
					  xmlns:s="library://ns.adobe.com/flex/spark" creationComplete="group1_creationCompleteHandler(event)" cacheAsBitmap="true" cachePolicy="on">
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			public var shouldDelay:Boolean = false;
			
			protected function group1_creationCompleteHandler(event:FlexEvent):void {
				if(shouldDelay) {
					appearance.play()
				}
			}
			
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<fx:String id="iconName" />
		<fx:String id="mealType" />
		<fx:String id="imagePath" />
		<fx:String id="thumbPath" />
		<s:Animate target="{this}" id="appearance" duration="700">
			<s:SimpleMotionPath property="alpha" valueFrom="0.0" valueTo=".9" />
		</s:Animate>
	</fx:Declarations>
	
	<s:BitmapImage smooth="true" smoothingQuality="high" source="{imagePath}" horizontalCenter="0" verticalCenter="0" />

</s:Group>
